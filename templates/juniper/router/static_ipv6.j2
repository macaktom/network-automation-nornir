{% if static_routing_ipv6_config is defined %}
{% for net in static_routing_ipv6_config.networks %}
set routing-options rib inet6.0 static route {{ net.dest_ip }}{{ net.prefix_length }} next-hop {{ net.next_hop }}
{% endfor %}
{% if static_routing_ipv6_config.default is defined%}
set routing-options rib inet6.0 static route ::/0 next-hop {{ static_routing_ipv6_config.default.next_hop }}
{% endif %}
{% endif %}