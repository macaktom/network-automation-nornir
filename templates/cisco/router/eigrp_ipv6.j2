ipv6 unicast-routing
ipv6 router eigrp {{ eigrp_ipv6_config.AS_number }}
eigrp router-id {{ eigrp_ipv6_config.router_id }}
{%- for interface in eigrp_ipv6_config.passive_interfaces %}
    passive-interface {{ interface }}
{%- endfor %}
{%- if eigrp_ipv6_config.redistribute_static %}
    redistribute static
{%- endif -%}
{%- if eigrp_ipv6_config.redistribute_ospf %}
    {%- for process in eigrp_ipv6_config.redistribute_ospfv3_processes %}
        redistribute ospf {{ process }}
    {%- endfor %}
{%- endif -%}
exit
{%- for interface in eigrp_ipv6_config.interfaces %}
    interface {{ interface }}
    ipv6 enable
    ipv6 eigrp {{ eigrp_ipv6_config.AS_number }}
    exit
{%- endfor %}

