router eigrp {{ eigrp_config.AS_number }}
no auto-summary
{%- for interface in eigrp_config.passive_interfaces %}
    passive-interface {{ interface }}
{%- endfor %}
{%- for net in eigrp_config.networks %}
    network {{ net.ip }} {{ net.wildcard }}
{%- endfor %}
{%- if eigrp_config.redistribute_static %}
    redistribute static
{%- endif -%}
{%- if eigrp_config.redistribute_ospf %}
    {%- for process in eigrp_config.redistribute_ospf_processes %}
        redistribute ospf {{ process }}
    {%- endfor %}
{%- endif -%}